    <meta name="twitter:card" content="summary_large_image">
    <meta name="twitter:image" content="https://dailypolitics-assets.s3-eu-west-1.amazonaws.com/img/daily-politics.png">
    <meta property="twitter:url" content="{{ request.url | default('http://localhost:8080') }}" />
    <meta name="twitter:title" content="{% block twitterTitle %}{{ pageTitle | default('Daily Politics CMS') }}{% endblock %}">
    <meta name="twitter:description" content="{% block twitterDescription %}Latest news, comments and analysis from the UK and around the world.{% endblock %}">
    
