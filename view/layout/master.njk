            <div class="row">
                <div class="col-sm-12 text-right">
                    <!--<a href="/bookshop" class="btn nav-font-white">BOOKSHOP</a> |-->
                    {% if navigationLink() %}
                        <a href="{{ url('adminLoginLogout') }}" class="btn nav-font-white">LOGOUT</a>
